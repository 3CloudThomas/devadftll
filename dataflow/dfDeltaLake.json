{
	"name": "dfDeltaLake",
	"properties": {
		"folder": {
			"name": "DeltaLake"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "gen2MoviesCSV",
						"type": "DatasetReference"
					},
					"name": "dsMoviesCSV"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "DataLakeStorage",
						"type": "LinkedServiceReference"
					},
					"name": "sinkUpdInsDel"
				}
			],
			"transformations": [
				{
					"name": "filter1"
				},
				{
					"name": "UpdateBasedOnYear"
				},
				{
					"name": "InsUpDel"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movies as string,",
				"          Title as string,",
				"          genresgenregenre as string,",
				"          YEAR as string,",
				"          Rating as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> dsMoviesCSV",
				"dsMoviesCSV filter(YEAR ==\"1950\" || YEAR ==\"1988\" || YEAR == \"1960\") ~> filter1",
				"filter1 derive(Rating = iif( YEAR == \"1988\", \"1\", toString(Rating)),",
				"          YEAR = iif( YEAR == \"1960\", \"2021\", toString(YEAR)),",
				"          movies = iif( YEAR == \"1960\", movies + \"1000\", movies)) ~> UpdateBasedOnYear",
				"UpdateBasedOnYear alterRow(updateIf(YEAR==\"1988\"),",
				"     insertIf(YEAR==\"2021\"),",
				"     deleteIf(YEAR==\"1950\")) ~> InsUpDel",
				"InsUpDel sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'delta',",
				"     fileSystem: 'deltalake',",
				"     mergeSchema: false,",
				"     autoCompact: false,",
				"     optimizedWrite: false,",
				"     vacuum: 0,",
				"     deletable:true,",
				"     insertable:true,",
				"     updateable:true,",
				"     upsertable:false,",
				"     keys:['movies','YEAR'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkUpdInsDel"
			]
		}
	}
}